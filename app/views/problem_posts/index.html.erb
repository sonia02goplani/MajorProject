
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('assets/problempost/posts.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Problem Posts</h1>
                        <hr class="small">
                        <span class="subheading">By someone between you</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
              <% @post.each do |y| %>
                <div class="post-preview">
                    <a href="post.html">
                        <h2 class="post-title">
                            <%=link_to y.title , problem_post_path(y.id)%>
                        </h2>
                        <h3 class="post-subtitle">
                            
                        </h3>
                    </a>
                    <p class="post-meta">Posted by  <%=y.name%><br> on <%= y.created_at.strftime("%d/%m/%Y %I:%M %p") %></p>
                     <br>
                     <%=link_to "Read More", problem_post_path(y.id),
                        :class =>"btn btn-primary"%> 
               </div>
                  <%end%>
                <hr>
               
                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            
                        <% @categories.limit(4).each do |c| %>
                        <ul class="list-unstyled">
                        <li>
                    <%= link_to c.name_category , new_problem_category_problem_post_path(c.id)%>
                        </li>
                         </ul>
                        <% end %>
                        </div>
                      <!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            
                            <% @categories.last(4).each do |c| %>
                            <ul class="list-unstyled">
                            <li>
                        <%= link_to c.name_category , new_problem_category_problem_post_path(c.id)%>
                            </li>
                            </ul>
                            <%end%>
                        </div>
                        <!-- /.col-lg-6 -->       
                        </div>
            
                </div>

                <!-- Pager -->
                <ul class="pager">
                    <li>
                    <%= link_to_previous_page @post, 'Previous Page' %>
                    <%= link_to_next_page @post, 'Next Page' %>

                    </li>
                </ul>
            </div>

        </div>
    </div>

    <hr>

